<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="14dp">

    <!-- Device Color Accent Bar -->
    <TextView
        android:id="@+id/widgetDeviceColorBar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="8dp"
        android:background="#00E5FF" />

    <!-- Header -->
    <LinearLayout
        android:id="@+id/widgetHeaderRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Device Color Dot -->
        <TextView
            android:id="@+id/widgetDeviceColorDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="●"
            android:textSize="12sp"
            android:textColor="#00E5FF" />

        <TextView
            android:id="@+id/widgetStatusDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="●"
            android:textSize="14sp"
            android:textColor="#69F0AE" />

        <TextView
            android:id="@+id/widgetDeviceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Open RadiaCode"
            android:textColor="#9E9EA8"
            android:textSize="13sp"
            android:singleLine="true"
            android:ellipsize="end" />

        <!-- Anomaly Badge -->
        <TextView
            android:id="@+id/widgetAnomalyBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="⚠"
            android:textSize="14sp"
            android:textColor="#FFD600"
            android:visibility="gone" />

        <TextView
            android:id="@+id/widgetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--:--"
            android:textColor="#6E6E78"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Dose Row Container -->
    <LinearLayout
        android:id="@+id/widgetDoseRow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/widget_card_background"
        android:paddingStart="14dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minWidth="100dp">

            <TextView
                android:id="@+id/widgetDoseLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOSE RATE"
                android:textColor="#00A5C0"
                android:textSize="9sp"
                android:letterSpacing="0.05" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/widgetDoseValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textColor="#00E5FF"
                    android:textSize="26sp" />

                <!-- Trend indicator for rate of change -->
                <TextView
                    android:id="@+id/widgetDoseTrend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:text=""
                    android:textColor="#69F0AE"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/widgetDoseUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="μSv/h"
                    android:textColor="#6E6E78"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/widgetDoseSparkline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:scaleType="fitXY" />
    </LinearLayout>

    <!-- Count Row Container -->
    <LinearLayout
        android:id="@+id/widgetCpsRow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/widget_card_background"
        android:paddingStart="14dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minWidth="100dp">

            <TextView
                android:id="@+id/widgetCpsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COUNT RATE"
                android:textColor="#A030C0"
                android:textSize="9sp"
                android:letterSpacing="0.05" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/widgetCpsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textColor="#E040FB"
                    android:textSize="26sp" />

                <!-- Trend indicator for rate of change -->
                <TextView
                    android:id="@+id/widgetCpsTrend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:text=""
                    android:textColor="#69F0AE"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/widgetCpsUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="cps"
                    android:textColor="#6E6E78"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/widgetCpsSparkline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>
