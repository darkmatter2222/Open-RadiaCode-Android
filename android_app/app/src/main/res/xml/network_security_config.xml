<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for VEGA TTS server -->
    <!-- This is required because the TTS API is served over HTTP -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">99.122.58.29</domain>
    </domain-config>
    
    <!-- Keep HTTPS as default for everything else -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
