<?xml version="1.0" encoding="utf-8"?>
<!-- Dashboard Panel: Intelligence Report -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intelligencePanelRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/intelligenceTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="INTELLIGENCE REPORT"
            android:textColor="@color/pro_text_muted"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <!-- Info Button -->
        <ImageView
            android:id="@+id/intelligenceInfoButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_dialog_info"
            android:tint="@color/pro_text_muted"
            android:contentDescription="Help"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp" />

        <!-- Alert badge count -->
        <TextView
            android:id="@+id/intelligenceAlertBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="0"
            android:textColor="@color/pro_background"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Stability and Data Quality Row -->
    <LinearLayout
        android:id="@+id/stabilityRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Stability Indicator -->
        <TextView
            android:id="@+id/stabilityIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● STABLE"
            android:textColor="@color/pro_green"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/pro_border" />

        <!-- Data Quality -->
        <TextView
            android:id="@+id/dataQualityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good (50 samples)"
            android:textColor="@color/pro_text_secondary"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Summary text (hidden in ultra-compact mode) -->
    <TextView
        android:id="@+id/intelligenceSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Analyzing data..."
        android:textColor="@color/pro_text_secondary"
        android:textSize="13sp"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Metrics Row (adapts based on available space) -->
    <LinearLayout
        android:id="@+id/metricsRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <!-- Dose Trend Column -->
        <LinearLayout
            android:id="@+id/doseTrendColumn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dose Trend"
                android:textColor="@color/pro_text_muted"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/doseTrendLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="—"
                android:textColor="@color/pro_cyan"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Prediction Column -->
        <LinearLayout
            android:id="@+id/predictionColumn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Predicted Next"
                android:textColor="@color/pro_text_muted"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/predictedDoseLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="—"
                android:textColor="@color/pro_text_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/predictionConfidenceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="@color/pro_text_muted"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Anomalies Column -->
        <LinearLayout
            android:id="@+id/anomaliesColumn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anomalies"
                android:textColor="@color/pro_text_muted"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/anomalyCountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="0"
                android:textColor="@color/pro_green"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/anomalyDetailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="none"
                android:textColor="@color/pro_text_muted"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Expandable Details (shown in larger sizes) -->
    <LinearLayout
        android:id="@+id/expandedSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pro_border" />

        <!-- Statistics Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Range"
                    android:textColor="@color/pro_text_muted"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/statsRangeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="—"
                    android:textColor="@color/pro_text_primary"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Std Dev"
                    android:textColor="@color/pro_text_muted"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/statsStdDevLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="—"
                    android:textColor="@color/pro_text_primary"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Z-Score"
                    android:textColor="@color/pro_text_muted"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/statsZScoreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="—"
                    android:textColor="@color/pro_text_primary"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
