<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:background="?android:selectableItemBackground">

    <!-- Device color indicator -->
    <View
        android:id="@+id/deviceColorIndicator"
        android:layout_width="4dp"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <!-- Device name (editable) -->
        <TextView
            android:id="@+id/deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- MAC Address -->
        <TextView
            android:id="@+id/deviceMac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#6E6E78"
            android:textSize="12sp"
            android:fontFamily="monospace" />

        <!-- Status line -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/statusDot"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/status_dot" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="#9E9EA8"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Last reading (if connected) -->
    <LinearLayout
        android:id="@+id/readingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginEnd="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/readingValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00E5FF"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/readingUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6E6E78"
            android:textSize="10sp"
            android:text="Î¼Sv/h" />

    </LinearLayout>

    <!-- Enable/disable toggle -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/enableSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Edit button -->
    <ImageButton
        android:id="@+id/editButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:src="@drawable/ic_edit"
        android:contentDescription="Edit device"
        app:tint="#6E6E78" />

</LinearLayout>
