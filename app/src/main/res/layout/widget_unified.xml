<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Unified Widget Layout - V2
    
    This is the ONLY widget layout. It dynamically adapts based on configuration.
    The exact same structure is mirrored in the preview for pixel-perfect matching.
    
    Key principle: Simple, clean, perfect real estate utilization.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Header Row: Status + Timestamp (compact, always visible) -->
    <LinearLayout
        android:id="@+id/headerRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Connection Status Indicator -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/status_dot_connected" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="12:34:56"
            android:textColor="#6E6E78"
            android:textSize="11sp" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Anomaly Badge (hidden by default) -->
        <TextView
            android:id="@+id/anomalyBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚠"
            android:textSize="12sp"
            android:textColor="#FFD600"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Content Area: Metrics display (flexible based on config) -->
    <LinearLayout
        android:id="@+id/contentArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Dose Rate Section -->
        <LinearLayout
            android:id="@+id/doseSection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/widget_card_background"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="visible">

            <!-- Dose Value Column -->
            <LinearLayout
                android:id="@+id/doseValueColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minWidth="90dp">

                <TextView
                    android:id="@+id/doseLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOSE RATE"
                    android:textColor="#00A5C0"
                    android:textSize="8sp"
                    android:letterSpacing="0.05" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/doseValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.057"
                        android:textColor="#00E5FF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- Trend Indicator (hidden by default) -->
                    <TextView
                        android:id="@+id/doseTrend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text=""
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/doseUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="μSv/h"
                    android:textColor="#6E6E78"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Dose Chart (fills remaining space) -->
            <ImageView
                android:id="@+id/doseChart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitXY"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Spacer between sections -->
        <View
            android:id="@+id/sectionSpacer"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:visibility="visible" />

        <!-- Count Rate Section -->
        <LinearLayout
            android:id="@+id/countSection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/widget_card_background"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="visible">

            <!-- Count Value Column -->
            <LinearLayout
                android:id="@+id/countValueColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minWidth="90dp">

                <TextView
                    android:id="@+id/countLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COUNT RATE"
                    android:textColor="#A030C0"
                    android:textSize="8sp"
                    android:letterSpacing="0.05" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/countValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.2"
                        android:textColor="#E040FB"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- Trend Indicator (hidden by default) -->
                    <TextView
                        android:id="@+id/countTrend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text=""
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/countUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cps"
                    android:textColor="#6E6E78"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Count Chart (fills remaining space) -->
            <ImageView
                android:id="@+id/countChart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="fitXY"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
