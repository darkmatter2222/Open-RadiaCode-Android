<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A1E"
    android:padding="12dp">

    <!-- Header -->
    <TextView
        android:id="@+id/widgetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open RadiaCode"
        android:textColor="#6E6E78"
        android:textSize="10sp"
        android:textStyle="bold" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Dose -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOSE"
                android:textColor="#0097A7"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetDose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#00E5FF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetDoseUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="μSv/h"
                android:textColor="#6E6E78"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- CPS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COUNT"
                android:textColor="#9C27B0"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetCps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#E040FB"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetCpsUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cps"
                android:textColor="#6E6E78"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Status -->
    <TextView
        android:id="@+id/widgetStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="—"
        android:textColor="#6E6E78"
        android:textSize="9sp"
        android:gravity="end" />

</LinearLayout>
