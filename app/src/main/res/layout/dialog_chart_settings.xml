<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/pro_surface">

    <!-- Time Window Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIME WINDOW"
            android:textColor="@color/pro_text_muted"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/dialogTimeWindowChips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/dialogChip30s"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="30s"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/chip_bg_color"
                    app:chipStrokeColor="@color/pro_border"
                    app:chipStrokeWidth="1dp"
                    app:chipMinHeight="36dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/dialogChip1m"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="1m"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/chip_bg_color"
                    app:chipStrokeColor="@color/pro_border"
                    app:chipStrokeWidth="1dp"
                    app:chipMinHeight="36dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/dialogChip5m"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="5m"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/chip_bg_color"
                    app:chipStrokeColor="@color/pro_border"
                    app:chipStrokeWidth="1dp"
                    app:chipMinHeight="36dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/dialogChip15m"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="15m"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/chip_bg_color"
                    app:chipStrokeColor="@color/pro_border"
                    app:chipStrokeWidth="1dp"
                    app:chipMinHeight="36dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/dialogChip1h"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="1h"
                    android:textColor="@color/chip_text_color"
                    app:chipBackgroundColor="@color/chip_bg_color"
                    app:chipStrokeColor="@color/pro_border"
                    app:chipStrokeWidth="1dp"
                    app:chipMinHeight="36dp" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@color/pro_border"
        android:alpha="0.3" />

    <!-- Dose Units Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOSE RATE UNITS"
            android:textColor="@color/pro_text_muted"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/dialogDoseUnitChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/dialogChipUsvH"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Î¼Sv/h"
                android:textColor="@color/chip_text_color"
                app:chipBackgroundColor="@color/chip_bg_color"
                app:chipStrokeColor="@color/pro_border"
                app:chipStrokeWidth="1dp"
                app:chipMinHeight="36dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/dialogChipNsvH"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="nSv/h"
                android:textColor="@color/chip_text_color"
                app:chipBackgroundColor="@color/chip_bg_color"
                app:chipStrokeColor="@color/pro_border"
                app:chipStrokeWidth="1dp"
                app:chipMinHeight="36dp" />

        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@color/pro_border"
        android:alpha="0.3" />

    <!-- Count Rate Units Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COUNT RATE UNITS"
            android:textColor="@color/pro_text_muted"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/dialogCountUnitChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/dialogChipCps"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="cps"
                android:textColor="@color/chip_text_color"
                app:chipBackgroundColor="@color/chip_bg_color"
                app:chipStrokeColor="@color/pro_border"
                app:chipStrokeWidth="1dp"
                app:chipMinHeight="36dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/dialogChipCpm"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="cpm"
                android:textColor="@color/chip_text_color"
                app:chipBackgroundColor="@color/chip_bg_color"
                app:chipStrokeColor="@color/pro_border"
                app:chipStrokeWidth="1dp"
                app:chipMinHeight="36dp" />

        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

</LinearLayout>
