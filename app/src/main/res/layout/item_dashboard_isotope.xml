<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <!-- Edit mode border -->
    <View
        android:id="@+id/editBorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dashboard_edit_border"
        android:visibility="gone" />

    <!-- Isotope panel content -->
    <LinearLayout
        android:id="@+id/isotopeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header with title and controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:id="@+id/isotopeChartTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ISOTOPE IDENTIFICATION"
                android:textColor="@color/pro_text_muted"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />
            
            <!-- Accumulation Mode Toggle (FULL / INT) -->
            <TextView
                android:id="@+id/isotopeAccumulationModeToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="4dp"
                android:text="FULL"
                android:textColor="@color/pro_magenta"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/chip_outline_background" />
            
            <!-- Display Mode Toggle (Probability / Fraction) -->
            <TextView
                android:id="@+id/isotopeDisplayModeToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="4dp"
                android:text="PROB"
                android:textColor="@color/pro_cyan"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/chip_outline_background" />
            
            <!-- Hide Background Toggle -->
            <TextView
                android:id="@+id/isotopeHideBackgroundToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="4dp"
                android:text="BKG"
                android:textColor="@color/pro_text_muted"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/chip_outline_background" />
            
            <!-- Chart Type Selector -->
            <ImageButton
                android:id="@+id/isotopeChartTypeBtn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_chart_line"
                android:contentDescription="Chart type"
                android:scaleType="centerInside"
                android:padding="4dp"
                app:tint="@color/pro_text_muted" />
            
            <!-- Settings -->
            <ImageButton
                android:id="@+id/isotopeSettingsBtn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_settings"
                android:contentDescription="Isotope settings"
                android:scaleType="centerInside"
                android:padding="4dp"
                app:tint="@color/pro_text_muted" />
        </LinearLayout>

        <!-- Mode selector: Scan vs Real-time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/isotopeScanBtn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="SCAN"
                android:textSize="11sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp"
                app:cornerRadius="18dp"
                app:strokeColor="@color/pro_cyan"
                android:textColor="@color/pro_cyan" />
            
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/isotopeRealtimeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Real-time"
                android:textColor="@color/pro_text_secondary"
                android:textSize="12sp"
                app:thumbTint="@color/pro_cyan"
                app:trackTint="@color/pro_border" />
            
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
            
            <!-- Status indicator -->
            <TextView
                android:id="@+id/isotopeStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idle"
                android:textColor="@color/pro_text_muted"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Chart container (swappable views) -->
        <FrameLayout
            android:id="@+id/isotopeChartContainer"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="8dp">
            
            <!-- Multi-line chart (default) -->
            <com.radiacode.ble.ui.IsotopeChartView
                android:id="@+id/isotopeMultiLineChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />
            
            <!-- Stacked area chart -->
            <com.radiacode.ble.ui.StackedAreaChartView
                android:id="@+id/isotopeStackedChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
            
            <!-- Animated bar chart -->
            <com.radiacode.ble.ui.IsotopeBarChartView
                android:id="@+id/isotopeBarChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
            
            <!-- Scan result placeholder -->
            <LinearLayout
                android:id="@+id/isotopeScanResultContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">
                
                <TextView
                    android:id="@+id/isotopeScanResultText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Press SCAN to identify isotopes"
                    android:textColor="@color/pro_text_muted"
                    android:textSize="13sp"
                    android:gravity="center" />
                
                <ProgressBar
                    android:id="@+id/isotopeScanProgress"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:indeterminateTint="@color/pro_cyan" />
            </LinearLayout>
        </FrameLayout>

        <!-- Top isotope quick view (always visible at bottom) -->
        <LinearLayout
            android:id="@+id/isotopeQuickView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP:"
                android:textColor="@color/pro_text_muted"
                android:textSize="10sp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/isotopeTopResult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="â€”"
                android:textColor="@color/pro_cyan"
                android:textSize="11sp"
                android:singleLine="true"
                android:ellipsize="end" />
        </LinearLayout>

    </LinearLayout>

    <!-- Drag handle (shown in edit mode) -->
    <ImageView
        android:id="@+id/dragHandle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:src="@drawable/ic_drag_handle"
        android:contentDescription="Drag to reorder"
        android:background="@drawable/drag_handle_background"
        android:padding="4dp"
        android:visibility="gone"
        app:tint="@color/pro_text_muted" />

</FrameLayout>
