<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <!-- Edit mode border -->
    <View
        android:id="@+id/editBorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dashboard_edit_border"
        android:visibility="gone" />

    <!-- The actual metric card -->
    <com.radiacode.ble.ui.MetricCardView
        android:id="@+id/metricCard"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

    <!-- Drag handle (shown in edit mode) -->
    <ImageView
        android:id="@+id/dragHandle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:src="@drawable/ic_drag_handle"
        android:contentDescription="Drag to reorder"
        android:background="@drawable/drag_handle_background"
        android:padding="4dp"
        android:visibility="gone"
        app:tint="@color/pro_text_muted" />

</FrameLayout>
