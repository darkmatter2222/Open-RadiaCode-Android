<?xml version="1.0" encoding="utf-8"?>
<!--
    Widget Configuration Activity V2
    
    Simplified, intuitive configuration with:
    - Live preview that EXACTLY matches widget output
    - Clear toggle switches for data sources
    - Simple dropdown for chart types
    - Color theme selection
    - Advanced options collapsible section
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pro_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configure Widget"
            android:textColor="@color/pro_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What you see here is exactly what the widget will look like"
            android:textColor="@color/pro_text_muted"
            android:textSize="13sp"
            android:layout_marginBottom="20dp" />

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- LIVE PREVIEW - Uses exact same layout as widget -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LIVE PREVIEW"
            android:textColor="@color/pro_cyan"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/previewContainer"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/pro_surface"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/pro_border"
            app:strokeWidth="1dp"
            app:cardElevation="4dp">

            <!-- Preview content inflated from widget_unified.xml -->
            <include 
                android:id="@+id/previewContent"
                layout="@layout/widget_unified" />

        </com.google.android.material.card.MaterialCardView>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- DEVICE SELECTION -->
        <!-- ═══════════════════════════════════════════════════════════════ -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEVICE"
            android:textColor="@color/pro_text_secondary"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/deviceSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:popupBackground="@color/pro_surface" />

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- DATA SOURCES -->
        <!-- ═══════════════════════════════════════════════════════════════ -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATA SOURCES"
            android:textColor="@color/pro_text_secondary"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <!-- Dose Rate Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/pro_surface"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/pro_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Main toggle row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dose Rate"
                            android:textColor="@color/pro_cyan"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Radiation dose rate (μSv/h)"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/showDoseSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <!-- Chart type selector (shown when dose enabled) -->
                <LinearLayout
                    android:id="@+id/doseChartOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chart:"
                        android:textColor="@color/pro_text_secondary"
                        android:textSize="13sp"
                        android:layout_marginEnd="12dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/doseChartTypeChips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/doseChartNone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:textColor="@color/chip_text_selector"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/pro_cyan"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/doseChartSparkline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sparkline"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:textColor="@color/chip_text_selector"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/pro_cyan"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/doseChartLine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Line"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:textColor="@color/chip_text_selector"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/pro_cyan"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/doseChartBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bar"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:textColor="@color/chip_text_selector"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/pro_cyan"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/doseChartDelta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delta"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:textColor="@color/chip_text_selector"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/pro_cyan"
                            app:chipStrokeWidth="1dp" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Count Rate Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/pro_surface"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/pro_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Main toggle row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Count Rate"
                            android:textColor="@color/pro_magenta"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Radiation count rate (cps)"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/showCountSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <!-- Chart type selector (shown when count enabled) -->
                <LinearLayout
                    android:id="@+id/countChartOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chart:"
                        android:textColor="@color/pro_text_secondary"
                        android:textSize="13sp"
                        android:layout_marginEnd="12dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/countChartTypeChips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/countChartNone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:textColor="@color/chip_text_selector"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/pro_magenta"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/countChartSparkline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sparkline"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:textColor="@color/chip_text_selector"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/pro_magenta"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/countChartLine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Line"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:textColor="@color/chip_text_selector"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/pro_magenta"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/countChartBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bar"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:textColor="@color/chip_text_selector"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/pro_magenta"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/countChartDelta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delta"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:textColor="@color/chip_text_selector"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/pro_magenta"
                            app:chipStrokeWidth="1dp" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- APPEARANCE -->
        <!-- ═══════════════════════════════════════════════════════════════ -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APPEARANCE"
            android:textColor="@color/pro_text_secondary"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <!-- Color Theme -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color Theme"
            android:textColor="@color/pro_text_primary"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="16dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/colorThemeChips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:singleLine="true" />

        </HorizontalScrollView>

        <!-- Background Opacity -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Background Opacity"
            android:textColor="@color/pro_text_primary"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/opacityChips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:singleSelection="true"
            app:selectionRequired="true" />

        <!-- Chart Time Window -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chart Time Window"
            android:textColor="@color/pro_text_primary"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/timeWindowChips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:singleSelection="true"
            app:selectionRequired="true" />

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- ADVANCED OPTIONS (Expandable) -->
        <!-- ═══════════════════════════════════════════════════════════════ -->

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/pro_surface"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/pro_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Expandable Header -->
                <LinearLayout
                    android:id="@+id/advancedHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Advanced Options"
                        android:textColor="@color/pro_text_secondary"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/advancedExpandIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_down_float"
                        android:rotation="0"
                        app:tint="@color/pro_text_muted" />

                </LinearLayout>

                <!-- Expandable Content -->
                <LinearLayout
                    android:id="@+id/advancedContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="gone">

                    <!-- Show Trend Indicators -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Show Trend Indicators"
                                android:textColor="@color/pro_text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Display ↑ ↓ arrows showing value trends"
                                android:textColor="@color/pro_text_muted"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/showTrendSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false" />

                    </LinearLayout>

                    <!-- Show Anomaly Badge -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Show Anomaly Badge"
                                android:textColor="@color/pro_text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⚠ warning when unusual readings detected"
                                android:textColor="@color/pro_text_muted"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/showAnomalySwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false" />

                    </LinearLayout>

                    <!-- Dynamic Color by Value -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dynamic Color by Value"
                                android:textColor="@color/pro_text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Color changes based on radiation level"
                                android:textColor="@color/pro_text_muted"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/dynamicColorSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false" />

                    </LinearLayout>

                    <!-- Bollinger Bands -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Show Bollinger Bands"
                                android:textColor="@color/pro_text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Statistical volatility bands on charts"
                                android:textColor="@color/pro_text_muted"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/bollingerSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false" />

                    </LinearLayout>

                    <!-- Show Border Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Show Border"
                                android:textColor="@color/pro_text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Show outline around widget"
                                android:textColor="@color/pro_text_muted"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/showBorderSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                    <!-- Transparent Chart Background Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transparent Chart"
                                android:textColor="@color/pro_text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chart blends with widget panel"
                                android:textColor="@color/pro_text_muted"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/transparentChartSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- ACTION BUTTONS -->
        <!-- ═══════════════════════════════════════════════════════════════ -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Cancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/pro_border" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/createButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
