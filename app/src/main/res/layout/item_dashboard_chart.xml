<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <!-- Edit mode border -->
    <View
        android:id="@+id/editBorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dashboard_edit_border"
        android:visibility="gone" />

    <!-- Chart panel container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/chartTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="REAL TIME RATE"
                android:textColor="@color/pro_text_muted"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <ImageButton
                android:id="@+id/chartGoRealtime"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_go_realtime"
                android:contentDescription="Go to real-time"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:padding="4dp"
                app:tint="@color/pro_cyan" />

            <ImageButton
                android:id="@+id/chartReset"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_reset_zoom"
                android:contentDescription="Reset zoom"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:padding="4dp"
                app:tint="@color/pro_text_muted" />
        </LinearLayout>

        <!-- Chart view -->
        <com.radiacode.ble.ui.ProChartView
            android:id="@+id/chartView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="8dp" />

        <!-- Stats row (hidden in compact mode) -->
        <com.radiacode.ble.ui.StatRowView
            android:id="@+id/statsRow"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Drag handle (shown in edit mode) -->
    <ImageView
        android:id="@+id/dragHandle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:src="@drawable/ic_drag_handle"
        android:contentDescription="Drag to reorder"
        android:background="@drawable/drag_handle_background"
        android:padding="4dp"
        android:visibility="gone"
        app:tint="@color/pro_text_muted" />

</FrameLayout>
