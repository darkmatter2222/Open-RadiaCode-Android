<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/card_background"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Accent color bar -->
    <View
        android:id="@+id/accentBar"
        android:layout_width="4dp"
        android:layout_height="48dp"
        android:background="@color/pro_cyan" />

    <!-- Card info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Name"
            android:textColor="@color/pro_text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Card description"
            android:textColor="@color/pro_text_muted"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Drag handle -->
    <ImageView
        android:id="@+id/dragHandle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_drag_handle"
        android:contentDescription="Drag to reorder"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:tint="@color/pro_text_muted" />

</LinearLayout>
