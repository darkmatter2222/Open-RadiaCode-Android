<?xml version="1.0" encoding="utf-8"?>
<!-- Dashboard Panel: Real Time Chart (Dose or Count) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chartPanelRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/chartTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="REAL TIME DOSE RATE"
            android:textColor="@color/pro_text_muted"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:singleLine="true"
            android:ellipsize="end" />

        <ImageButton
            android:id="@+id/chartGoRealtime"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_go_realtime"
            android:contentDescription="Go to real-time"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:padding="4dp"
            app:tint="@color/pro_cyan" />

        <ImageButton
            android:id="@+id/chartReset"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_reset_zoom"
            android:contentDescription="Reset zoom"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:padding="4dp"
            app:tint="@color/pro_text_muted" />
    </LinearLayout>

    <!-- Chart View (expands to fill available space) -->
    <com.radiacode.ble.ui.ProChartView
        android:id="@+id/chartView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

    <!-- Y-axis mini range (shown when compact) -->
    <LinearLayout
        android:id="@+id/chartMiniRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/chartMinValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.054"
            android:textColor="@color/pro_text_muted"
            android:textSize="10sp"
            android:fontFamily="monospace" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:background="@color/pro_border" />

        <TextView
            android:id="@+id/chartMaxValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.061"
            android:textColor="@color/pro_text_muted"
            android:textSize="10sp"
            android:fontFamily="monospace" />
    </LinearLayout>

    <!-- Stats Row (hidden when colSpan=1) -->
    <com.radiacode.ble.ui.StatRowView
        android:id="@+id/chartStats"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="8dp" />

</LinearLayout>
