<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widgetTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/pro_text_muted"
            android:textSize="10sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <View
            android:id="@+id/widgetStatusDot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/status_dot" />

        <TextView
            android:id="@+id/widgetStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="LIVE"
            android:textColor="@color/pro_status_live"
            android:textSize="9sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Dose Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOSE"
                android:textColor="@color/pro_cyan_dim"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetDose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="@color/pro_cyan"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/widgetDoseUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="μSv/h"
                android:textColor="@color/pro_text_muted"
                android:textSize="10sp" />

            <!-- Dose Trend -->
            <TextView
                android:id="@+id/widgetDoseTrend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text=""
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp"
            android:background="@color/pro_border" />

        <!-- CPS Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COUNT"
                android:textColor="@color/pro_magenta_dim"
                android:textSize="9sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widgetCps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="@color/pro_magenta"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/widgetCpsUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cps"
                android:textColor="@color/pro_text_muted"
                android:textSize="10sp" />

            <!-- CPS Trend -->
            <TextView
                android:id="@+id/widgetCpsTrend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text=""
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- Sparkline Area (visible when widget is tall enough) -->
    <ImageView
        android:id="@+id/widgetSparkline"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <!-- Footer -->
    <TextView
        android:id="@+id/widgetUpdated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=""
        android:textColor="@color/pro_text_muted"
        android:textSize="9sp"
        android:gravity="end" />

</LinearLayout>
