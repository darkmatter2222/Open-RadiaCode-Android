<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pro_bg">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pro_bg_card"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/pro_bg_card"
            app:title="Sound Settings"
            app:titleTextColor="@color/pro_text_primary"
            app:navigationIconTint="@color/pro_text_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Configure audio feedback for different events. Each sound can be enabled/disabled and has individual volume control."
                android:textColor="@color/pro_text_muted"
                android:textSize="14sp" />

            <!-- ===== DATA TICK SOUND ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_marginBottom="12dp">

                <!-- Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:text="DATA TICK"
                    android:textColor="@color/pro_cyan"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/pro_border"
                    android:alpha="0.5" />

                <!-- Enable/Disable Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data Tick Sound"
                            android:textColor="@color/pro_text_primary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Subtle tick when radiation data arrives"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchDataTick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/pro_cyan"
                        app:trackTint="@color/pro_surface" />
                </LinearLayout>

                <!-- Volume Slider -->
                <LinearLayout
                    android:id="@+id/sliderContainerDataTick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volume"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="13sp" />

                        <SeekBar
                            android:id="@+id/sliderDataTick"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:max="100"
                            android:progress="15"
                            android:progressTint="@color/pro_cyan"
                            android:thumbTint="@color/pro_cyan" />

                        <TextView
                            android:id="@+id/volumeDataTick"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="15%"
                            android:textColor="@color/pro_cyan"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/testDataTick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â–¶ Test Sound"
                            android:textColor="@color/pro_cyan"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ===== CONNECTED SOUND ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:text="DEVICE CONNECTED"
                    android:textColor="@color/pro_green"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/pro_border"
                    android:alpha="0.5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Connection Sound"
                            android:textColor="@color/pro_text_primary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Chime when device connects"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchConnected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/pro_cyan"
                        app:trackTint="@color/pro_surface" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sliderContainerConnected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volume"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="13sp" />

                        <SeekBar
                            android:id="@+id/sliderConnected"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:max="100"
                            android:progress="50"
                            android:progressTint="@color/pro_green"
                            android:thumbTint="@color/pro_green" />

                        <TextView
                            android:id="@+id/volumeConnected"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="50%"
                            android:textColor="@color/pro_green"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/testConnected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â–¶ Test Sound"
                            android:textColor="@color/pro_green"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ===== DISCONNECTED SOUND ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:text="DEVICE DISCONNECTED"
                    android:textColor="@color/pro_red"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/pro_border"
                    android:alpha="0.5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disconnection Sound"
                            android:textColor="@color/pro_text_primary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Tone when device disconnects"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchDisconnected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/pro_cyan"
                        app:trackTint="@color/pro_surface" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sliderContainerDisconnected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volume"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="13sp" />

                        <SeekBar
                            android:id="@+id/sliderDisconnected"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:max="100"
                            android:progress="50"
                            android:progressTint="@color/pro_red"
                            android:thumbTint="@color/pro_red" />

                        <TextView
                            android:id="@+id/volumeDisconnected"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="50%"
                            android:textColor="@color/pro_red"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/testDisconnected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â–¶ Test Sound"
                            android:textColor="@color/pro_red"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ===== ALARM SOUND ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:text="ALERT ALARM"
                    android:textColor="@color/pro_amber"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/pro_border"
                    android:alpha="0.5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alert Alarm Sound"
                            android:textColor="@color/pro_text_primary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Sound when a smart alert triggers"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAlarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/pro_cyan"
                        app:trackTint="@color/pro_surface" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sliderContainerAlarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volume"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="13sp" />

                        <SeekBar
                            android:id="@+id/sliderAlarm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:max="100"
                            android:progress="80"
                            android:progressTint="@color/pro_amber"
                            android:thumbTint="@color/pro_amber" />

                        <TextView
                            android:id="@+id/volumeAlarm"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="80%"
                            android:textColor="@color/pro_amber"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/testAlarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â–¶ Test Sound"
                            android:textColor="@color/pro_amber"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ===== ANOMALY SOUND ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:text="ANOMALY DETECTED"
                    android:textColor="@color/pro_magenta"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/pro_border"
                    android:alpha="0.5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anomaly Detection Sound"
                            android:textColor="@color/pro_text_primary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Sound for statistical anomalies"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAnomaly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/pro_cyan"
                        app:trackTint="@color/pro_surface" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sliderContainerAnomaly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volume"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="13sp" />

                        <SeekBar
                            android:id="@+id/sliderAnomaly"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:max="100"
                            android:progress="60"
                            android:progressTint="@color/pro_magenta"
                            android:thumbTint="@color/pro_magenta" />

                        <TextView
                            android:id="@+id/volumeAnomaly"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textColor="@color/pro_magenta"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/testAnomaly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â–¶ Test Sound"
                            android:textColor="@color/pro_magenta"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ===== AMBIENT SOUND ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:text="AMBIENT BACKGROUND"
                    android:textColor="@color/pro_text_muted"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/pro_border"
                    android:alpha="0.5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ambient Drone"
                            android:textColor="@color/pro_text_primary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Sci-fi background atmosphere (loops)"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAmbient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/pro_cyan"
                        app:trackTint="@color/pro_surface" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sliderContainerAmbient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volume"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="13sp" />

                        <SeekBar
                            android:id="@+id/sliderAmbient"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:max="100"
                            android:progress="5"
                            android:progressTint="@color/pro_text_muted"
                            android:thumbTint="@color/pro_text_muted" />

                        <TextView
                            android:id="@+id/volumeAmbient"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="5%"
                            android:textColor="@color/pro_text_secondary"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Note: Ambient audio will play continuously while enabled. Keep volume low for subtle atmosphere."
                        android:textColor="@color/pro_text_muted"
                        android:textSize="11sp"
                        android:fontStyle="italic" />
                </LinearLayout>
            </LinearLayout>

            <!-- ===== VEGA TTS VOICE ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_marginBottom="12dp">

                <!-- Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:text="VEGA VOICE"
                    android:textColor="@color/pro_magenta"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/pro_border"
                    android:alpha="0.5" />

                <!-- Enable/Disable Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VEGA Voice Announcements"
                            android:textColor="@color/pro_text_primary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="AI voice reads alerts aloud (Doom-style)"
                            android:textColor="@color/pro_text_muted"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchVegaTts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/pro_magenta"
                        app:trackTint="@color/pro_surface" />
                </LinearLayout>

                <!-- VEGA Settings (shown when enabled) -->
                <LinearLayout
                    android:id="@+id/vegaSettingsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="gone">

                    <!-- Test Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/testVegaTts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”Š Test VEGA Voice"
                        android:textColor="@color/pro_text_primary"
                        app:backgroundTint="@color/pro_surface"
                        app:strokeColor="@color/pro_magenta"
                        app:strokeWidth="1dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="When enabled, alerts with voice enabled will be spoken aloud using the VEGA AI voice synthesizer. Each alert can individually enable/disable voice in the Alert Settings."
                        android:textColor="@color/pro_text_muted"
                        android:textSize="11sp"
                        android:fontStyle="italic" />
                </LinearLayout>
            </LinearLayout>

            <!-- Sound Files Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â„¹ï¸ Sound Recommendations"
                    android:textColor="@color/pro_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Looking for the perfect sounds? Check freesound.org for free Creative Commons sounds:\n\nâ€¢ Data tick: Search 'soft click' or 'subtle blip'\nâ€¢ Connected: Search 'connection established sci-fi'\nâ€¢ Disconnected: Search 'disconnect tone'\nâ€¢ Alarm: Search 'sci-fi alert alarm'\nâ€¢ Anomaly: Search 'glitch detection'\n\nPlace .wav files in app/src/main/res/raw/"
                    android:textColor="@color/pro_text_muted"
                    android:textSize="12sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
