<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pro_background"
    tools:context=".FullscreenMapActivity">

    <!-- Fullscreen Map -->
    <org.osmdroid.views.MapView
        android:id="@+id/fullscreenMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pro_surface" />

    <!-- Top Left Controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:background="@drawable/card_background"
        android:padding="8dp">

        <!-- Close Button -->
        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Close"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:tint="@color/pro_text_primary" />

        <!-- Metric Selector -->
        <Spinner
            android:id="@+id/metricSelector"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:minWidth="120dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <!-- Top Right Controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:background="@drawable/card_background"
        android:padding="8dp">

        <!-- Center Button -->
        <ImageButton
            android:id="@+id/centerButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_mylocation"
            android:contentDescription="Center on location"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:tint="@color/pro_cyan" />
    </LinearLayout>

    <!-- Right Side Zoom Controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="4dp">

        <!-- Zoom In -->
        <TextView
            android:id="@+id/zoomInButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/pro_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:contentDescription="Zoom in" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pro_border" />

        <!-- Zoom Out -->
        <TextView
            android:id="@+id/zoomOutButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="âˆ’"
            android:textColor="@color/pro_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:contentDescription="Zoom out" />
    </LinearLayout>

    <!-- Bottom Info Bar (optional - for scale/coordinates) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:background="@drawable/card_background"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RADIATION MAP"
            android:textColor="@color/pro_cyan"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />
    </LinearLayout>

</FrameLayout>
