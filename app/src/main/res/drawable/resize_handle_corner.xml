<?xml version="1.0" encoding="utf-8"?>
<!-- Corner resize handle (diagonal arrow indicator) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/pro_surface" />
            <stroke
                android:width="1dp"
                android:color="@color/pro_cyan" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>
    
    <!-- Diagonal lines indicating resize -->
    <item
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="@color/pro_cyan" />
            </shape>
        </rotate>
    </item>
    
</layer-list>
